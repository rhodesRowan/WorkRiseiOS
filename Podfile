# Uncomment the next line to define a global platform for your project
platform :ios, '11.0'

def shared_pods
  pod 'Firebase/Core'
  pod 'Firebase/Auth'
  pod 'Firebase/Crashlytics'
  pod 'Firebase/Analytics'
  pod 'SwiftLint'
end

target 'WorkRise' do
  # Comment the next line if you don't want to use dynamic frameworks
  use_frameworks!

  # Pods for WorkRise
  shared_pods

end

target 'WorkRise-Development' do
  # Comment the next line if you don't want to use dynamic frameworks
  use_frameworks!

  # Pods for WorkRise
  shared_pods

end
